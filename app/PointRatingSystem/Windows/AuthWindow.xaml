<Window x:Class="PointRatingSystem.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно Авторизации"
        Height="450"
        MinHeight="450"
        Width="800"
        MinWidth="800">
    <Grid Background="#FF004165">
        <Border Background="#FF009FDA"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="280"
                Height="340">
            <StackPanel HorizontalAlignment="Center"
                        Width="200"
                        Margin="0,54,0,0">
                <TextBlock FontSize="21"
                           HorizontalAlignment="Center"
                           Text="PointRatingSystem"
                           Foreground="WhiteSmoke"
                           Margin="0,0,0,54"/>
                <TextBox x:Name="loginTB"
                         Height="26"
                         Margin="0,8" />
                <TextBox x:Name="passwordTB"
                             Height="26"
                             Margin="0,0,0,8" />

                <Button x:Name="SubmitButton" Content="Войт"
                        Click="LogInButton_Click"
                        Height="26" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
